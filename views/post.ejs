<%- include('partials/header') %>
<div class="post-page-content">
    <h2 class="post-title"><%= sendTitle %> </h2>
<p class="post-text">
    <%= sendPost %> 
</p>
</div>
<br>
<% if(authFlag == 1){ %>
    <div class="admin-options">
        <h3>Admin Options</h3>
        <br>
        <form action="/do-delete" method="post">
        <input class="admin-title" type="text" name="deletePostTitle" readonly value="<%= sendTitle%>" />
        <!-- <button type="submit">Edit Post</button> -->
        <button class="delete-button" type="submit">Delete Post</button>
        </form>
        <br>
        <form action="/updatePost" method="post">
            <input type="text" class="admin-title" value="<%= sendTitle %> readonly "  />
            <button class="edit-button" type="submit">Edit Post</button>
        </form>
    </div>
<% } %>

